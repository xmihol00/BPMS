@model (ServiceAllDTO dto, bool selected)

<div id="@Model.dto.Id" class="col-12 col-md-6 col-lg-4 p-2" onclick="DetailTransition(this, '/Service/DetailPartial/')">    
    <div class="shadow-box p-3 my-card bradius-card hover-card pointer @(Model.selected ? "selected-card" : "")">
        <h3 class="border-bottom text-center">@Model.dto.Name</h3>
        <div class="text-url text-center">@Model.dto.URL</div>
        <div class="row">
            <div class="col-6 text-right">HTTP metoda:</div>
            <div class="col-6 ps-0"><b>@Model.dto.HttpMethod</b></div>
        </div>
        <div class="row">
            <div class="col-6 text-right">Serializace:</div>
            <div class="col-6 ps-0"><b>@Model.dto.Serialization.ToLabel()</b></div>
        </div>
        <div class="row">
            <div class="col-6 text-right">Typ slu≈æby:</div>
            <div class="col-6 ps-0"><b>@Model.dto.Type</b></div>
        </div>
        <div class="row">
            <div class="col-6 text-right">Autentizace:</div>
            <div class="col-6 ps-0"><b>@Model.dto.AuthType.ToLabel()</b></div>
        </div>
    </div>
</div>