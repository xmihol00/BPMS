@model UserOverviewDTO
@{
    ViewData["title"] = "Uživatelé";
}

<div id="PageNavId" class="page-navbar">
    <div class="d-flex justify-content-between px-4 page-navbar-content">
        <button type="button" class="btn my-auto"><i class="fas fa-chevron-circle-left my-auto"></i></button>
        <h1 class="my-auto text-font">Uživatelé</h1>
        <div class="my-auto">
            <button class="butn btn-p" onclick="ShowModal('CreateUserFormId')">Vytvořit</button>
        </div>
    </div>
    <form id="CreateUserFormId" class="mx-4 mt-4 mb-3" method="POST" action="/Agenda/Create"
            oninput="InputValidator(this)">
        <div class="d-flex justify-content-between align-content-center py-2 px-3 shadow-box mb-3 bg-ddd">
            <h2 class="mb-0 text-font">Tvorba uživatel</h2>
            <i class="fas fa-times my-auto close-icon" onclick="HideModal()"></i>
        </div>
        <div class="row">
            <div class="col-12 col-lg-6 mb-3">
                <label class="input">
                    <input required class="input-field" type="text" placeholder=" " name="Name" value="" />
                    <span class="input-label">Jméno</span>
                </label>
            </div>
            <div class="col-12 col-lg-6 mb-3">
                <label class="input">
                    <input required class="input-field" type="text" placeholder=" " name="Surname" value="" />
                    <span class="input-label">Přijmení</span>
                </label>
            </div>
            <div class="col-12 col-lg-6 mb-3">
                <label class="input">
                    <input required class="input-field" type="email" placeholder=" " name="Email" value="" />
                    <span class="input-label">E-mail</span>
                </label>
            </div>
            <div class="col-12 col-lg-6 mb-3">
                <label class="input">
                    <input class="input-field" type="tel" placeholder=" " name="PhoneNumber" value="" />
                    <span class="input-label">Telefonní číslo</span>
                </label>
            </div>
            <div class="d-flex justify-content-center">
                <button form="CreateUserFormId" type="submit" class="butn btn-s" disabled>Vytvořit</button>
            </div>
        </div>
    </form>
</div>
<div id="PageContentId" class="d-flex pt-3">
    <div id="DetailDivId" class="d-none detail-div">
        <div class="loading-content"></div>
    </div>
    <div id="OverviewDivId" class="container-lg">
        <div class="row">
            @foreach (UserAllDTO user in Model.Users)
            {
                @await Html.PartialAsync("Partial/_UserCard", (user, false))
            }
        </div>
    </div>
    <div id="OverviewNavId" class="overview-nav">

    </div>
</div>