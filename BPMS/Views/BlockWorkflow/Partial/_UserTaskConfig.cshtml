@model IUserTaskWorkflowConfigDTO

<div class="col-12 col-md-6 mt-3">
    <label class="input">
        <input required class="input-field" type="date" name="SolveDate" 
               value="@(Model.SolveDate == DateTime.MinValue ? DateTime.Now.AddMonths(1).ToString("yyyy-MM-dd") : Model.SolveDate.ToString("yyyy-MM-dd"))"/>
        <span class="input-label">Vyřešit do</span>
    </label>
</div>
<div class="col-12 col-lg-6 mt-3">
    <label class="input">
        <select required class="input-select" name="Priority">
            @foreach (TaskPriorityEnum priority in Enum.GetValues(typeof(TaskPriorityEnum)))
            {
                @if (priority == Model.Priority)
                {
                    <option value="@priority" selected>@priority.ToLabel()</option>
                }
                else
                {
                    <option value="@priority">@priority.ToLabel()</option>
                }
            }
        </select>
        <span class="input-label">Priorita</span>
    </label>
</div>