<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BPMS</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/buttons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/inputs.css" asp-append-version="true" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white border-bottom box-shadow screen-md">
            <div class="container-fluid">
                <i class="fas fa-bars float-end menu-btn" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"></i>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BPMS</a>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Agenda" asp-action="Overview">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <nav class="screen-lg">
            <div id="MainSideBarId" class="side-menu-bar side-menu-bar-small">
                <i class="fas fa-bars float-end menu-btn" onclick="ToggleSideBar()"></i>
                <ul class="pt-5 mt-3 side-bar-ul">
                    <li class="active-nav-item">
                        <a asp-area="" asp-controller="Task" asp-action="Overview"><i class="fas fa-tasks"></i> <span>Úkoly</span></a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Workflow" asp-action="Overview"><i class="fas fa-retweet workflow-icon"></i> <span>Workflow</span></a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Agenda" asp-action="Overview"><i class="fas fa-list-alt"></i> <span>Agendy</span></a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Service" asp-action="Overview"><i class="fas fa-satellite-dish"></i> <span>Webové služby</span></a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="User" asp-action="Overview"><i class="fas fa-user-cog user-icon"></i> <span>Uživatelé</span></a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="System" asp-action="Overview"><i class="fas fa-network-wired system-icon"></i> <span>Systémy</span></a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div id="Main" role="main" class="pb-3 main-content-large main-content">
        @RenderBody()
    </div>

    <footer id="Footer" class="border-top footer footer-large text-muted">
        <div class="container">
            &copy; 2022 - David Mihola
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
    <div id="ModalBackgroundId" class="modal-background" onclick="HideModal()"></div>
</body>
</html>
