@model List<BlockIdNameDTO>

<label class="input mt-3">
    @if (Model.Count == 0)
    {
        <select required class="input-select" disabled>
            <option value="" selected>Nevybrán</option>
        </select>
    }
    else
    {
        <select required class="input-select" name="BlockId">
            <option value="" selected>Nevybrán</option>
            @foreach (BlockIdNameDTO block in Model)
            {
                <option value="@block.Id" class="empty-name">@block.Name</option>
            }
        </select>
    }
    <span class="input-label">Odesílatel</span>
</label>