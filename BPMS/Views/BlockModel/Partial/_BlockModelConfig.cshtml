@model BlockModelConfigDTO

@if (Model != null)
{
    <form id="BlockEditFormId" class="row mt-1">
        <div class="col-12">
            <label class="input">
                <input name="Name" class="input-field" type="text" placeholder=" " data-reqi="BlockNameLabelId" value="@Model.Name" />
                <span id="BlockNameLabelId" class="input-label">Název</span>
            </label>
        </div>
        <div class="col-12 mt-2">
            <label class="input">
                <textarea name="Description" class="input-field" placeholder=" " value="@Model.Description"></textarea>
                <span class="input-label">Popis</span>
            </label>
        </div>
        <h4 class="mt-3">Atributy bloku</h4>
        @if (Model is IUserTaskConfigDTO)
        {   
            @await Html.PartialAsync("Partial/_UserTaskConfig", (Model as IUserTaskConfigDTO)?.Attributes)
        }
        else
        {
            <p class="text-center mb-2">
                Blok nemá konfigurovany žádné atributy.
            </p>
        }
    </form>
    <form id="AttribCreateFormId" class="d-none mt-2 position-relative" method="post" action="/BlockModel/CreateEditAttribute" 
          onsubmit="BlockConfigSubmit(event, 'BlockConfigTargetId')" oninput="InputValidator(this)">
        <div class="vertical-justify-center config-buttons">
            <button type="submit" form="AttribCreateFormId" id="CreateAttBtnId" class="butn butn-sm btn-s mb-1" disabled><i class="fas fa-check"></i></button>
            <button type="button" id="CancelAttBtnId" class="butn butn-sm btn-d mt-1" onclick="CancelAddAttrib()"><i class="fas fa-times"></i></button>
        </div>
        <input type="hidden" id="IdId" name="Id" value="" />
        <input type="hidden" name="TaskId" value="@Model.Id" />
        <h5 id="HeadlineId">Tvorba atribut</h5>
        <div class="row">
            <div class="col-4">
                <label class="input">
                    <input id="NameId" name="Name" class="input-field" data-reqi="AttribNameLabelId" type="text" placeholder=" " value="" />
                    <span id="AttribNameLabelId" class="input-label color-required">Název</span>
                </label>
            </div>
            <div class="col-4">
                <label class="input">
                    <select id="TypeId" class="input-field input-select" name="Type"> 
                        @foreach (AttributeTypeEnum enumVal in Enum.GetValues(typeof(AttributeTypeEnum)))
                        {
                            <option value="@enumVal">@enumVal.ToLabel()</option>   
                        }
                    </select>
                    <span class="input-label">Typ</span>
                </label>
            </div>  
            <div class="col-4 vertical-justify-center justify-content-center">
                <div class="d-flex justify-content-center">
                    <span id="CompulsoryLabelId" class="label-checkbox label-checkbox-checked">Povinnost</span>
                    <input type="checkbox" id="CompulsoryId" name="Compulsory" class="checkbox" data-ch="CompulsoryLabelId" checked/>
                </div>
            </div>
            <div class="col-6 text-center mt-3">
                <label class="input">
                    <textarea id="DescrId" name="Description" class="input-field" type="text" placeholder=" "></textarea>
                    <span class="input-label">Popis</span>
                </label>
            </div>
            <p class="col-6 vertical-justify-center text-center mt-3">
                Pro tento typ atributu se nekonfiguruje specifikace.
            </p>
        </div>
    </form>
    <div class="d-flex justify-content-center mt-3">
        <button type="button" id="NewAttBtnId" class="butn btn-p" onclick="ShowAddAttrib()">Přidat atribut</button>
        <button type="submit" form="BlockEditFormId" id="EditBtnId" class="butn btn-s" disabled>Upravit</button>
    </div>
}
