@model BlockModelConfigDTO

@if (Model != null)
{
    <div class="row mt-1">
        <div class="col-12">
            <label class="input">
                <input id="BlockNameId" name="Name" class="input-field" type="text" placeholder=" " value="@Model.Name" />
                <span class="input-label">Název</span>
            </label>
        </div>
        <h4 class="mt-3">Data bloku</h4>
        @if (Model.RootNodes.Count() > 0)
        {
            <div class="col-12">
                @await Html.PartialAsync("Partial/_BlockDataSchema", Model.RootNodes)
            </div>
        }
        else
        {
            <p class="text-center mb-2">
                Blok nemá konfigurovany žádné atributy.
            </p>
        }
    </div>
    <div id="NewAttribRowId" class="row d-none">
        <h5>Konfigurace atributu</h5>
        <div class="col-4">
            <label class="input">
                <input id="SchemaNameId" name="Name" class="input-field" type="text" placeholder=" " value="" />
                <span class="input-label color-required">Název</span>
            </label>
        </div>
        <div class="col-4">
            <label class="input">
                <input id="AliasId" name="Name" class="input-field" type="text" placeholder=" " value="" />
                <span class="input-label">Alias</span>
            </label>
        </div>
        <div class="col-2">
            <label class="input">
                <select class="input-field input-select" name="AdministratorId"> 
                    <option value="@DataTypeEnum.Object">Objekt</option>
                    <option value="@DataTypeEnum.String">Řetězec</option>
                    <option value="@DataTypeEnum.Number">Číslo</option>
                    <option value="@DataTypeEnum.Bool">Bool</option>
                    <option value="@DataTypeEnum.Array">Pole</option>
                </select>
                <span class="input-label">Typ</span>
            </label>
        </div>  
        <div class="col-2 vertical-justify-center">
            <div>
                <span class="d-inline-block label-checkbox pb-2 label-checkbox-checked">Povinnost</span>
                <input type="checkbox" class="checkbox" checked/>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-3">
        <button type="button" id="NewBlockId" class="butn btn-p" onclick="ShowAddAttrib()">Přidat atribut</button>
        <button type="submit" id="CreateBtnId" class="butn btn-s" disabled>Upravit</button>
        <button type="button" id="CreateAttId" class="butn btn-s d-none">Vytvořit atribut</button>
        <button type="button" id="CancelAttId" class="butn btn-d d-none">Zrušit</button>
    </div>
}
