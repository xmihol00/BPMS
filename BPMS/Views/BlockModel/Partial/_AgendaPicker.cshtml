@model List<AgendaIdNameDTO>

<label class="input mt-3">
    @if (Model.Count == 0)
    {
        <select required class="input-select" disabled>
            <option value="" selected>Nevybrána</option>
        </select>
    }
    else
    {
        <select required class="input-select" onchange="AgendaChange(this)">
            <option value="" selected>Nevybrána</option>
            @foreach (AgendaIdNameDTO agenda in Model)
            {
                <option value="@agenda.Id" class="empty-name">@agenda.Name</option>
            }
        </select>
    }
    <span class="input-label">Agenda</span>
</label>
<div id="ModelPickerId">
    @await Html.PartialAsync("Partial/_ModelPicker", new List<ModelIdNameDTO>())
</div>