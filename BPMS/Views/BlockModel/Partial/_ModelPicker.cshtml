@model List<ModelIdNameDTO>

<label class="input mt-3">
    @if (Model.Count == 0)
    {
        <select required class="input-select" disabled>
            <option value="" selected>Nevybrán</option>
        </select>
    }
    else
    {
        <select required class="input-select" onchange="ModelChange(this)">
            <option value="" selected>Nevybrán</option>
            @foreach (ModelIdNameDTO modl in Model)
            {
                <option value="@modl.Id" class="empty-name">@modl.Name</option>
            }
        </select>
    }
    <span class="input-label">Model</span>
</label>
<div id="PoolPickerId">
    @await Html.PartialAsync("Partial/_PoolPicker", new List<PoolIdNameDTO>())
</div>