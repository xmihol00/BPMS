@model (List<TaskDataDTO> data, bool editable)

@if (Model.data.Count > 0)
{
    <div class="row">
        @foreach (TaskDataDTO task in Model.data)
        {
            switch (task)
            {
                case ITaskString taskString:
                    @await Html.PartialAsync("Partial/_TaskDataString", (taskString, Model.editable))
                    break;

                case ITaskNumber taskNumber:
                    @await Html.PartialAsync("Partial/_TaskDataNumber", (taskNumber, Model.editable))
                    break;

                case ITaskText taskText:
                    @await Html.PartialAsync("Partial/_TaskDataText", (taskText, Model.editable))
                    break;
            }
        }
    </div>
}
else
{
    <div class="text-placeholder my-3">V této sekci nemá úkol žádná data.</div>
}
