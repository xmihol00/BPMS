@model List<NotificationAllDTO>

<h4 class="text-font border-bottom text-center mx-3 my-2">Oznámení</h4>
@if (Model.Count > 0)
{
    foreach(NotificationAllDTO notification in Model)
    {
        <div class="notif-div @notification.State d-flex justify-content-between">
            <div class="my-auto">@notification.Type.ToText()<b class="notif-info">@notification.Info</b>.</div>
            <div id="@notification.Id" class="my-auto">
                @if (notification.State == NotificationStateEnum.Unread)
                {
                    <button class="btn px-1" onclick="NotificationSeen(this)"><i class="fas fa-eye-slash"></i></button>
                }         
                <button class="btn px-1 text-prim-edit @(notification.State == NotificationStateEnum.Marked ? "text-prim" : "")" onclick="NotificationMark(this)">
                    <i class="fas fa-highlighter"></i>
                </button>
                <a class="btn px-1 text-prim-edit" href="@(notification.Type.ToHref())@notification.TargetId"><i class="fas fa-angle-double-right"></i></a>
            </div>
        </div>
    }
    <div class="d-flex justify-content-center mb-2">
        <button class="btn me-3 text-1p2m"><i class="fas fa-eye-slash"></i></button>
        <button class="btn ms-3 text-1p2m"><i class="fas fa-highlighter"></i></button>
    </div>
}
else
{
    <div class="text-placeholder text-center no-notif">
        Nemáte žádná upozornění.
    </div>
}