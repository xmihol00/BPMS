@model SignInDTO
@{
    ViewData["Title"] = "Přihlášení";
}

<div class="container-fluid">
    <div class="d-flex justify-content-center signin-position">
        <div class="col-12 col-md-6 col-lg-4 p-2">
            <div class="shadow-box p-3 my-card bradius-card">
                <h2 class="border-bottom text-center">Přihlášení — BPMS</h2>
                <form id="SignInFormId" method="POST" action="/Account/SignIn" oninput="InputValidator(this)" novalidate>
                    <input type="hidden" name="ReturnURL" value="@Model.ReturnURL" />
                    <label class="input mt-2 mb-3">
                        <input required class="input-field" type="text" placeholder=" " name="UserName" value="@Model.UserName" />
                        <span class="input-label">Přihlašovací jméno</span>
                    </label>
                    <label class="input mb-3">
                        <input required class="input-field" type="password" placeholder=" " name="Password"
                                value="" />
                        <span class="input-label">Heslo</span>
                    </label>
                    @if (!String.IsNullOrWhiteSpace(Model.UserName))
                    {
                        <div class="signin-fail">Nezámé přihlašovací údaje</div>
                    }
                    <div class="d-flex justify-content-between mx-4">
                        <button type="submit" form="SignInFormId" class="butn btn-s" disabled>Přihlásit se</button>
                        <a class="butn btn-p" href="/Account/Create" >První přihlášení</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>