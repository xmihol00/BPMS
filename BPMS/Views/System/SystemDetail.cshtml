@model SystemDetailDTO
@{
    ViewData["title"] = "Detail syst√©mu";
}
<script src="~/js/System/System.js"></script>

<div id="PageNavId" class="page-navbar">
    @await Html.PartialAsync("Partial/_SystemDetailHeader", Model)
</div>
<div id="PageContentId" class="d-flex pt-3">
    <div id="DetailDivId" class="detail-div container-lg">
        @await Html.PartialAsync("Partial/_SystemDetail", Model)
    </div>
    <div id="OverviewDivId" class="container-lg side-overview">
        <div class="row">
            @await Html.PartialAsync("Partial/_SystemCard", (Model.SelectedSystem, true))
            @foreach (SystemAllDTO user in Model.OtherSystems)
            {
                @await Html.PartialAsync("Partial/_SystemCard", (user, false))
            }
        </div>
    </div>
    <div id="OverviewNavId" class="overview-nav overview-nav-hide" onclick="FilterChanges(event, '/System/Filter')"></div>
</div>
