<div class="d-flex justify-content-between px-4 page-navbar-content">
    <button type="button" class="btn my-auto"><i class="fas fa-info-circle my-auto"></i></button>
    <h1 class="my-auto text-font">Systémy</h1>
    <div class="my-auto nav-placeholder">
        <button class="butn btn-p" onclick="ShowModal('CreateSystemFormId')">Vytvořit</button>
    </div>
</div>
<form id="CreateSystemFormId" class="mx-4 mt-4 mb-3" method="POST" action="/System/Create" oninput="InputValidator(this)">
    <div class="d-flex justify-content-between align-content-center py-2 px-3 shadow-box mb-3 bg-ddd">
        <h2 class="mb-0">Tvorba systému</h2>
        <i class="fas fa-times my-auto close-icon" onclick="HideModal()"></i>
    </div>
    <div class="row">
        <div class="col-12 mb-3">
            <label class="input">
                <input required class="input-field" type="text" placeholder=" " name="URL" value="" />
                <span class="input-label">URL systému</span>
            </label>
        </div>
        <div class="col-12 col-lg-6 mb-3">
            <label class="input">
                <input required class="input-field" type="text" placeholder=" " name="Name" value="" />
                <span class="input-label">Název</span>
            </label>
        </div>
        <div class="col-12 col-lg-6 mb-3">
            <label class="input">
                <select class="input-select" name="Encryption"> 
                    @foreach (EncryptionLevelEnum value in Enum.GetValues<EncryptionLevelEnum>())
                    {
                        <option value="@value">@value.ToLabel()</option>
                    }
                </select>
                <span class="input-label">Zabezbečení</span>
            </label>
        </div>
        <div class="col-12 mb-2">
            <label class="input mb-2">
                <textarea class="input-field" name="Description" placeholder=" "></textarea>
                <span class="input-label">Popis</span>
            </label>
        </div>
        <div class="col-12 mb-2">
            <label class="input mb-2">
                <textarea required class="input-field" name="Text" placeholder=" "></textarea>
                <span class="input-label">Text pro příjemce</span>
            </label>
        </div>
        <div class="d-flex justify-content-center">
            <button form="CreateSystemFormId" type="submit" class="butn btn-s" disabled>Vytvořit</button>
        </div>
    </div>
</form>