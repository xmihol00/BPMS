@model ModelOverviewDTO
@{
    ViewData["Title"] = "Modely";
    bool show = (bool)ViewData[SystemRoleEnum.ModelKeeper.ToString()] || (bool)ViewData[SystemRoleEnum.Admin.ToString()];
}
<script src="~/js/Model/Model.js"></script>
<script>
    const RoleForEdit = "@show" == "True";
</script>

<div id="PageNavId" class="page-navbar">
    <div class="d-flex justify-content-between px-4 page-navbar-content">
        <button type="button" class="btn my-auto"><i class="fas fa-info-circle my-auto"></i></button>
        <h1 class="my-auto text-font">@ViewData["Title"]</h1>
        <div class="my-auto">
            @if (show)
            {
                <a class="butn btn-p" href="/Service/Create">Vytvořit</a>
            }
        </div>
    </div>
</div>
<div id="PageContentId" class="d-flex pt-3">
    <div id="DetailDivId" class="d-none detail-div">
        <div class="loading-content"></div>
    </div>
    <div id="OverviewDivId" class="container-lg">
        @await Html.PartialAsync("Partial/_ModelOverview", Model.Models)
    </div>
    <div id="OverviewNavId" class="overview-nav" onclick="FilterChanges(event, '/Model/Filter')">
        <h2 class="text-font text-center mt-4 border-bottom mb-1">Filtrování</h2>
        @foreach (FilterTypeEnum value in Enum.GetValues<FilterTypeEnum>().Where(x => x.ToString().StartsWith("Model")))
        {
            <div id="@value" class="filter-div @(ViewBag.Filters[((int)value)] ? "filter-div-sel" : "")">@value.ToLabel()</div>   
        }
    </div>
</div>