@model ModelHeaderDTO

@if (Model != null)
{
    <div class="d-flex justify-content-between px-4 page-navbar-content">
        <i class="fas fa-chevron-circle-left my-auto"></i>
        <h1 class="mb-0 pt-1 text-font">Konfigurace Modelu</h1>
        <div class="my-auto">
            <button class="butn btn-p" onclick="ShowModal('EditModelId')" >Upravit</button>
            <button class="butn btn-s" >Spustit</button>
        </div>
    </div>
    <form id="EditModelId" class="mx-4 mt-4 mb-3 d-none" >
        <input type="hidden" name="Id" value="@Model.Id">
        <div class="d-flex justify-content-between align-content-center py-2 px-3 shadow-box mb-3 bg-ddd">
            <h2 class="mb-0">Editace modelu</h2>
            <i class="fas fa-times my-auto close-icon" onclick="HideModal()"></i>
        </div>
        <div class="row">
            <div class="col-12 mt-1">
                <label class="input">
                    <input id="ModelNameId" class="input-field" type="text" placeholder=" " name="Name" value="@Model.Name" />
                    <span class="input-label">NÃ¡zev</span>
                </label>
            </div>
            <div class="col-12 mt-3">
                <label class="input">
                    <textarea id="DescriptionId" class="input-field" name="Description" placeholder=" "></textarea>
                    <span class="input-label pointer">Popis</span>
                </label>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <button id="UploadModelBtnId" type="submit" class="butn btn-s">Upravit</button>
        </div>
    </form>
    <div id="BlockConfigId" class="mx-4 mt-4 mb-3 d-none">
        <div class="d-flex justify-content-between align-content-center py-2 px-3 shadow-box mb-3 bg-ddd">
            <h2 class="mb-0 text-font">Editace bloku modelu</h2>
            <i class="fas fa-times my-auto close-icon" onclick="HideModal()"></i>
        </div>
        <div id="BlockConfigTargetId">
            <div class="d-flex justify-content-center">
                @await Html.PartialAsync("_LoadingImage")
            </div>
        </div>
    </div>
}

