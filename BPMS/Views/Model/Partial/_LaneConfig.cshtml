@model LaneConfigDTO

<form id="LaneEditFormId" class="row mt-1" action="/Model/LaneEdit" onsubmit="AjaxFormSubmit(event, null, true)" novalidate>
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="col-12 mb-3">
        <label class="input">
            <div class="readonly-div">@Model.Name</div>
            <span class="input-label">Název</span>
        </label>
    </div>
    <div class="col-12 mb-3">
        <label class="input">
            <select required class="input-select" name="RoleId"> 
                @foreach (RoleAllDTO role in Model.Roles)
                {
                    @if (role.Id == Model.CurrentRoleId)
                    {
                        <option value="@role.Id" selected>@role.Name</option>
                    }
                    else
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                }
            </select>
            <span class="input-label">Řešitelská role</span>
        </label>
    </div>
    <div class="d-flex justify-content-center mb-1">
        <button type="submit" form="LaneEditFormId" id="EditBtnId" class="butn btn-s">Upravit</button>
    </div>
</form>
