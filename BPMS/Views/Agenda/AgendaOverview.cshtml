@{
    ViewData["Title"] = "Agendy";
}
<script src="~/js/Agenda/AgendaOverview.js"></script>

<div id="PageNavId" class="page-navbar ">
    <div class="d-flex justify-content-between px-4 page-navbar-content">
        <i class="fas fa-chevron-circle-left my-auto"></i>
        <h1 class="mb-0 pt-1">Agendy</h1>
        <div class="my-auto">
            <button class="butn btn-p" onclick="ShowModal('CreateAgendaId')">Vytvořit</button>
        </div>
    </div>
    <form id="CreateAgendaId" class="mx-4 mt-4 mb-3" method="POST" action="Agenda/Create" >
        <div class="d-flex justify-content-between align-content-center py-2 px-3 shadow-box mb-3 bg-ddd">
            <h2 class="mb-0">Tvorba Agendy</h2>
            <i class="fas fa-times my-auto close-icon" onclick="HideModal()"></i>
        </div>
        <div class="row mt-1">
            <div class="col-12 col-md-6">
                <label class="input">
                    <input class="input-field" type="text" placeholder=" " />
                    <span class="input-label">Název</span>
                </label>
            </div>
            <div class="col-12 col-md-6">
                <label class="input">
                    <select class="input-select"> 
                        <option>User 2</option>
                        <option>User 1</option>
                        <option>System test</option>
                    </select>
                    <span class="input-label">Správce</span>
                </label>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <button class="butn btn-s">Vytvořit</button>
        </div>
    </form>
</div>