@model List<RoleAllDTO>

<div class="col-12 mt-1">
    <label class="input">
        <select required class="input-select" name="Id" oninput="RoleChanged(this)"> 
            @foreach (RoleAllDTO role in Model)
            {
                if (role.Id == null)
                {
                    <option value="" class="text-secondary text-italic" selected>@role.Name</option>
                }
                else
                {
                    <option value="@role.Id" data-desc="@role.Description">@role.Name</option>
                }
            }
        </select>
        <span class="input-label">Existující role</span>
    </label>
</div>
<div id="NewRoleNameId" class="col-12 mt-3">
    <label class="input">
        <input required class="input-field" type="text" placeholder=" " name="Name" value="" />
        <span class="input-label">Název nové role</span>
    </label>
</div>
<div class="col-12 mt-3">
    <label class="input mb-1">
        <textarea id="RoleDescId" name="Description" class="input-field" placeholder=" "></textarea>
        <span class="input-label">Popis</span>
    </label>
</div>
<div class="d-flex justify-content-center mt-2">
    <button id="AddRoleBtnId" type="submit" class="butn btn-s d-none">Přidat</button>
    <button id="CreateRoleBtnId" form="AddRoleFormId" type="submit" class="butn btn-s" disabled>Vytvořit</button>
</div>
