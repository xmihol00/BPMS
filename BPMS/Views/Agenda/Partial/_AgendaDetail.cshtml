@model AgendaDetailPartialDTO
@{
    ViewData["Title"] = "Detail agendy";
}

@if (Model != null)
{
    <div id="AgendaInfoId" class="border-bottom pb-1 mb-3">
        @await Html.PartialAsync("Partial/_AgendaInfo", Model)        
    </div>
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="d-flex justify-content-around mb-3">
                <h3 class="text-center text-font mb-0">Řešitelské role</h3>
                <button class="butn btn-p" onclick="ShowModal('AddRoleFormId', '/Agenda/AddRole/@Model.Id', 'AddRoleId', false)">Přidat roli</button>
            </div>
            <div id="AgendaRolesId" class="row">
                @await Html.PartialAsync("Partial/_AgendaRoles", Model.Roles)
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="d-flex justify-content-around">
                <h3 class="text-center text-font mb-0">Modely agendy</h3>
                <button class="butn btn-p" onclick="ShowModal('UploadModelFormId')">Nahrát model</button>
            </div>
            @foreach (ModelAllDTO modl in Model.Models)
            {
                <div id="@modl.Id" class="shadow-box p-3 m-3 my-card bradius-card hover-card pointer" onclick="ShowModelModal(this)">
                    <div>
                        <h3 class="text-center border-bottom">@modl.Name</h3>
                    </div>
                    @Html.Raw(modl.SVG)
                </div>
            }
        </div>
    </div>
    <div class="row">
        <h3 class="text-center text-font">Aktivní workflow</h3>
    </div>
}