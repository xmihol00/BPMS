@model List<WorkflowAllDTO>

<h3 class="text-center text-font">Aktivní workflow</h3>
@if (Model.Count > 0)
{
    @foreach (WorkflowAllDTO workflow in Model)
    {
        <div class="shadow-box p-3 mt-3 my-card bradius-card hover-card">
            <div class="row">
                <div class="col-12 col-lg-6">
                    @Html.Raw(workflow.SVG)
                </div>
                <div class="col-12 col-lg-6">
                    <h3 class="text-center border-bottom">@workflow.Name</h3>
                    <p>@workflow.Description</p>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="text-secondary text-center text-italic">Agenda nemá žádná aktivní workflow.</div>
}