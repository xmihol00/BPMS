@model List<SystemAllDTO>

@if (Model.Count > 0)
{
    @foreach (SystemAllDTO system in Model)
    {
        <div class="shadow-box px-3 py-2 mb-3 my-card bradius-card">
            <div class="d-flex justify-content-between">
                <div class="my-auto">
                    <b>@system.Name</b> (@system.URL)
                </div>
                <div>
                    <button id="@system.Id" type="button" class="btn pt-sys-remove pb-1 pe-1 btn-remove btn-sm d-none" onclick="RemoveSystem(this)"><i class="fas fa-times"></i></button>
                    <button class="btn py-1 pe-1 text-prim-edit" type="button" onclick="EditSystem(this)"><i class="fas fa-edit"></i></button>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="text-secondary text-center text-italic mb-3">Agenda nemá žádné spolupracující systémy.</div>
}