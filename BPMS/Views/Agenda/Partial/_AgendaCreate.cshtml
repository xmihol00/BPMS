@model List<UserIdNameDTO>
<div class="d-flex justify-content-between align-content-center py-2 px-3 shadow-box mb-3 bg-ddd">
    <h2 class="mb-0">Tvorba agendy</h2>
    <i class="fas fa-times my-auto close-icon" onclick="HideModal()"></i>
</div>
<div class="row mt-1">
    <div class="col-12 col-lg-6">
        <label class="input">
            <input name="Name" class="input-field" type="text" placeholder=" " />
            <span class="input-label">Název</span>
        </label>
    </div>
    <div class="col-12 col-lg-6">
        <label class="input">
            <select class="input-select" name="AdministratorId"> 
                @foreach (UserIdNameDTO item in Model ?? new List<UserIdNameDTO>())
                {
                    <option value="@item.Id">@item.FullName</option>
                }
            </select>
            <span class="input-label">Správce</span>
        </label>
    </div>
    <div class="col-12">
        <label class="input mt-3">
            <textarea name="Description" class="input-field" placeholder=" "></textarea>
            <span class="input-label">Popis</span>
        </label>
    </div>
</div>
<div class="d-flex justify-content-center mt-3 mb-1">
    <button type="submit" form="CreateAgendaFormId" class="butn btn-s" disabled>Vytvořit</button>
</div>
