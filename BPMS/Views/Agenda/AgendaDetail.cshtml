@{
    ViewData["Title"] = "Detail Agendy";
}

<div id="PageNavId" class="page-navbar ">
    <div class="d-flex justify-content-between px-4 page-navbar-content">
        <i class="fas fa-chevron-circle-left my-auto"></i>
        <h1 class="mb-0 pt-1">Detail Agendy</h1>
        <div class="my-auto">
            <button class="butn btn-p" onclick="ShowModal('UploadModelId')">Nahrát model</button>
        </div>
    </div>
    <form id="UploadModelId" class="mx-4 mt-4 mb-3" method="POST" action="/ModelUpload/Upload" enctype="multipart/form-data">
        <div class="d-flex justify-content-between align-content-center py-2 px-3 shadow-box mb-3 bg-ddd">
            <h2 class="mb-0">Nahrání modelu</h2>
            <i class="fas fa-times my-auto close-icon" onclick="HideModal()"></i>
        </div>
        <div class="row">
            <div class="col-12 mt-1">
                <label class="input">
                    <input class="input-field" type="text" placeholder=" " name="Name" />
                    <span class="input-label">Název</span>
                </label>
            </div>
            <div class="col-12 col-md-6 mt-3">
                <label class="input">
                    <input class="input-file" type="file" onchange="FileSelected(this)" name="BPMN"/>
                    <span class="input-label pointer">Soubor BPMN</span>
                </label>
            </div>
            <div class="col-12 col-md-6 mt-3">
                <label class="input">
                    <input class="input-file" type="file" onchange="FileSelected(this)" name="SVG"/>
                    <span class="input-label pointer">Soubor SVG</span>
                </label>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <button class="butn btn-s">Nahrát</button>
        </div>
    </form>
</div>